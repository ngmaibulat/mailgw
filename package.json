{
  "name": "@aibulat/mailgw",
  "version": "0.0.4",
  "description": "mail router based on haraka",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "node --test",
    "build": "tsc",
    "build:watch": "tsc -w",
    "minor": "git add . ; git commit -a -m minor; git push",
    "client": "swaks -s 127.0.0.1 -f mail@devbook.local -t mail@devbook.local",
    "plugin-cfg": "haraka -o -c .",
    "start": "haraka  -c .",
    "dev": "MODE=DEV haraka  -c .",
    "cfgdev": "bash cfg-dev.sh",
    "cfg": "bash cfg-prod.sh"
  },
  "author": "Aibulat",
  "license": "MIT",
  "dependencies": {
    "Haraka": "^2.8.28",
    "dotenv": "^16.0.3",
    "envsub": "^4.1.0",
    "mailparser": "^3.5.0",
    "mimelib": "^0.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18"
  }
}
